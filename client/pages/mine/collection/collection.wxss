/* pages/mine/collection/collection.wxss */
.container-collection {}

.content {
  display: inline-block;
  padding: 0 24rpx;
  width: 100%;
}

.content .no-data {
  text-align: center;
}

.content .no-data image {
  margin-top: 82rpx;
  width: 483rpx;
  height: 400rpx;
}

.content .no-data .text {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #949EA8;
}

.content .item {
  width: 702rpx;
  margin-top: 20rpx;
  padding-left: 30rpx;
  position: relative;
  display: flex;
  background: #FFFFFF;
  border-radius: 16rpx;
}

.content .item .btn-close {
  position: absolute;
  width: 56rpx;
  height: 56rpx;
  top: 0;
  right: 0;
  padding: 0 0 15rpx 15rpx;
}

.content .item .shopcart-box {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  width: 56rpx;
  height: 56rpx;
}

.content .item .icon-shopcart {
  width: 100%;
  height: 100%;
}

.content .item .shopcart-box .shopcart-info {
  text-align: center;
  background: #FC4953;
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  line-height: 24rpx;
  color: #FFFFFF;
  /* min-width: 24rpx; */
  min-height: 24rpx;
  padding: 0 8rpx;
}

.content .item.mask-box .right {
  opacity: 0.5;
  width: 426rpx;
}

.content .item.mask-box .shopcart-box {
  opacity: 0.5;
}

.content .item .left {
  display: flex;
  align-items: center;
}

.content .item .left .icon-goods {
  margin: auto;
}

.content .item.mask-box .icon-goods-box {
  position: relative;
}

.content .item.mask-box .icon-goods-box .mask {
  border-radius: 16rpx;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: #333333;
  opacity: 0.5;
  font-size: 24rpx;
  color: #FFFFFF;
  line-height: 172rpx;
  text-align: center;
}

.content .item .l1 {
  margin-top: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 48rpx;
  color: #333333;
}

.content .item .l1 .tag {
  float: left;
  margin: 8rpx 6rpx 0 0;
  text-align: center;
  width: 96rpx;
  height: 28rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  line-height: 28rpx;
  color: #FFFFFF;
}

.content .item .l1 .tag.new_activity {
  background: #FF7753;
}

.content .item .l1 .tag.pre_sale {
  background: #22B862;
}

.content .item .l2 {
  font-size: 22rpx;
  line-height: 37rpx;
  color: #999999;
}

.content .item .l3 {
  font-size: 22rpx;
  line-height: 37rpx;
  color: #999999;
}

.content .item .l4 {
  /* margin: 24rpx 0 18rpx; */
}

.content .item .l4 text:first-child {
  font-size: 24rpx;
  font-weight: bold;
  line-height: 41rpx;
  color: #FC4953;
}

.content .item .l4 text:nth-of-type(2) {
  font-size: 34rpx;
  font-weight: bold;
  line-height: 58rpx;
  color: #FC4953;
}

.content .item .l4 text:nth-of-type(3) {
  margin-right: 2rpx;
  font-size: 22rpx;
  line-height: 37rpx;
  color: #888888;
  text-decoration: line-through;
}

.content .item .l4.no-sign {
  margin: 42rpx 0 22rpx;
}

.content .item .l4.no-sign text {
  line-height: 37rpx;
  font-size: 22rpx;
  color: #888888
}

.content .item .left {}

.content .item .left image {
  width: 172rpx;
  height: 172rpx;
  background: rgba(0, 0, 0, 0);
  border-radius: 16rpx;
}

.content .item .right {
  padding-left: 24rpx;
  min-height: 232rpx;
  width: calc(100% - 202rpx);
}

.l12-box {
  height: 127rpx;
}