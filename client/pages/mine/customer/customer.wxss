/* pages/mine/customer/customer.wxss */
.container-customer {}

.tip {
  position: fixed;
  width: 120rpx !important;
  height: 120rpx !important;
  position: fixed;
  bottom: 70rpx;
  right: 40rpx;
  background: #4D94FF;
  box-shadow: 0rpx 6rpx 18rpx rgba(14, 109, 251, 0.39);
  border-radius: 50%;
}

.tip image {
  width: 100%;
  height: 100%;
}

.content {
  overflow: hidden;
}

.content .l1 {
  margin-top: 2rpx;
  padding: 24rpx 0 22rpx 21rpx;
  background: #FFFFFF;
}

.content .l1 image {
  width: 40rpx;
  height: 40rpx;
}

.content .l1 text {
  margin-left: 19rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.content .l2 {
  overflow: auto;
}

.content .l2 .card {
  position: relative;
  background: #FFFFFF;
  display: flex;
  margin-top: 12rpx;
  padding-left: 24rpx;
}

.card .arrow {
  width: 12rpx;
  height: 26rpx;
  position: absolute;
  top: 79rpx;
  right: 24rpx;
}

.content .l2 .card .left {
  width: 172rpx;
}

.content .l2 .card .left image {
  margin-top: 34rpx;
  width: 124rpx;
  height: 124rpx;
  background: rgba(0, 0, 0, 0);
  border-radius: 50%;
}

.content .l2 .card .right {
  width: calc(100% - 172rpx);
}

.content .l2 .card .right .row1 {
  margin-top: 34rpx;
  font-size: 30rpx;
  color: #333333;
}

.content .l2 .card .right .row2 {
  margin-top: 24rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #333333;
}

.content .l2 .card .right .row3 {
  margin-top: 18rpx;
  font-size: 26rpx;
  color: #333333;
}

.content .l2 .card .right .row3 text:first-child {
  margin-right: 24rpx;
}

.content .l2 .card .right .row4 {
  margin-top: 20rpx;
  padding: 20rpx 0;
  font-size: 22rpx;
  border-top: 2px solid #EEEEEE;
  color: #999999;
}


.no-data {
  text-align: center;
}

.no-data image {
  margin-top: 184rpx;
  width: 483rpx;
  height: 400rpx;
}

.no-data .text {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #949EA8;
}