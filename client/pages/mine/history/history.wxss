/* pages/mine/history/history.wxss */
.container-history {}

.content {
  margin: 20rpx 24rpx 0;
  display: flex;
  justify-content: space-between;
}

.content.nodata {
  display: block;
}

.content .no-data {
  text-align: center;
}

.content .no-data image {
  margin-top: 82rpx;
  width: 483rpx;
  height: 400rpx;
}

.content .no-data .text {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #949EA8;
}

.scroll-box .item-box {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
}

.scroll-box .item {
  margin-bottom: 20rpx;
  width: 336rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
}

.scroll-box .item .icon-pri {
  width: 100%;
  height: 336rpx;
}

.scroll-box .item .cont {
  padding: 12rpx 20rpx 28rpx;
}

.scroll-box .item .cont .l1 {
  /* height: 88rpx; */
  line-height: 48rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.scroll-box .item .cont .l2 {
  margin-top: 14rpx;
  display: flex;
  align-items: flex-end;
}

.scroll-box .item .cont .l2.no-sign,
.scroll-box .item .cont .l2.no-sign {
  font-size: 24rpx;
  color: #888888;
  margin-bottom: 8rpx;
}

.scroll-box .item .cont .l2 .price {
  font-size: 34rpx;
  font-weight: bold;
  color: #FC4953;
}

.scroll-box .item .cont .l2 .price text {
  font-size: 24rpx;
  font-weight: bold;
  color: #FC4953;
}

.scroll-box .item .cont .l2 .origin-price {
  margin-left: 2rpx;
  font-size: 22rpx;
  color: #888888;
  text-decoration: line-through;
}

.scroll-box .item .shopcart-box {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 56rpx;
  height: 56rpx;
}

.scroll-box .item .shopcart-box .shopcart-info {
  text-align: center;
  background: #FC4953;
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  line-height: 24rpx;
  color: #FFFFFF;
  min-height: 24rpx;
  padding: 0 8rpx;
}

.scroll-box .item .cont .l1 .tag {
  float: left;
  margin: 8rpx 6rpx 0 0;
  text-align: center;
  width: 96rpx;
  height: 28rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  line-height: 28rpx;
  color: #FFFFFF;
}

.scroll-box .item .cont .l1 .tag.new_activity {
  background: #FF7753;
}

.scroll-box .item .cont .l1 .tag.pre_sale {
  background: #22B862;
}


.unit {
  font-size: 22rpx;
  font-size: 24rpx;
  line-height: 41rpx;
  color: #888888;
}

.l12-box {
  height: 127rpx;
}