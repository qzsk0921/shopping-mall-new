/* pages/mine/wallet/wallet.wxss */

.r1 {
  background: #FF723A;
}

.content {
  margin-top: -2rpx;
}

.r1 .options {
  width: 508rpx;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  position: relative;
}

.r1 .options .option {
  padding: 23rpx 0 15rpx;
  color: #999999;
  width: 254rpx;
  text-align: center;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.6);
}

.r1 .options .option.active {
  color: #ffffff;
}

.r1 .options-line {
  background: #ffffff;
  height: 6rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 59rpx;
  transition-duration: .3s;
}

.r2 {
  margin-top: -2rpx;
  position: relative;
  height: 290rpx;
  background: #FF723A;
}

.r2 .icon-wallet {
  width: 100%;
  height: 100%;
  position: absolute;
  bottom: 0;
  right: 0;
}

.r2 .r2-r1 {
  font-size: 24rpx;
  color: #FFFFFF;
  padding: 60rpx 0 0 48rpx;
}

.r2 .r2-r2 {
  display: flex;
  padding: 38rpx 0 0 48rpx;
  align-items: center;
}

.r2 .r2-r2 .r2-r2-l1 {
  font-size: 68rpx;
  font-weight: bold;
  color: #FFFFFF;
  border-right: 2rpx solid #FFFFFF;
  padding-right: 110rpx;
  height: 68rpx;
}

.r2 .r2-r2 .r2-r2-l2 {
  padding-left: 40rpx;
}

.r2 .r2-r2 .r2-r2-l2 .r2-r2-l2-r1 {
  font-size: 24rpx;
  color: #FFFFFF;
}

.r2 .r2-r2 .r2-r2-l2 .r2-r2-l2-r2 {
  margin-top: 14rpx;
  font-size: 34rpx;
  font-weight: 500;
  color: #FFFFFF;
}

