/* pages/mine/writeoff/confirm.wxss */
.section1 {
  margin: 20rpx 24rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding-bottom: 30rpx;
}

.section1 .l1 {
  padding: 30rpx 24rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
}

.section1 .l1 .left {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
}

.section1 .l2 {
  width: 100%;
  padding-right: 24rpx;
  display: flex;
  justify-content: space-between;
}

.section1 .l2 {
  padding: 0 24rpx;
  overflow: scroll;
  /* width: calc(100% - 48rpx); */
  /* height: 134rpx; */
}

.section1 .l2 .image-box {
  display: flex;
}

.section1 .l2 image {
  width: 134rpx;
  height: 134rpx;
  border-radius: 8rpx;
}

.section1 .l2 image:not(:first-child) {
  margin-left: 20rpx;
}

.section1 .l2 .l2-2-left {
  display: flex;
}

.section1 .l2 .l2-2-left .cont {
  margin-left: 20rpx;
  flex: 1;
}

.section1 .l2 .l2-2-left .cont .tit {
  margin-top: -6rpx;
  line-height: 38rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #333333;
}

.section1 .l2 .l2-2-left .cont .des {
  margin-top: 2rpx;
  font-size: 22rpx;
  line-height: 30rpx;
  color: #AAAAAA;
}

.section1 .l2 .l2-2-right {
  text-align: right;
}

.section1 .l2 .l2-2-right .price {
  font-size: 28rpx;
  color: #333333;
}

.section1 .l2 .l2-2-right .num {
  margin-top: 14rpx;
  font-size: 24rpx;
  color: #AAAAAA;
}

.section2 {
  padding: 30rpx 24rpx;
  margin: 20rpx auto 0;
  width: 702rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
}

.section2 .r {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #888888;
}

.section2 .r:not(:first-child) {
  margin-top: 40rpx;
}

.section2 .r1 {
  font-size: 28rpx;
  color: #333333;
}

.section3 {
  margin: 20rpx 24rpx 0;
  padding: 0 24rpx 30rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
}

.section3 .tit {
  height: 88rpx;
  line-height: 88rpx;
}

.section3 textarea {
  width: 702rpx;
  height: 106rpx;
  font-size: 28rpx;
  /* line-height: 48rpx; */
}

.placeholder-style {
  color: #999999;
}

.btn-writeoff {
  text-align: center;
  position: fixed;
  bottom: calc(env(safe-area-inset-bottom) + 48rpx);
  left: 50%;
  transform: translateX(-50%);
  background: #FF723A;
  width: 702rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  line-height: 80rpx;
  color: #FFFFFF;
}