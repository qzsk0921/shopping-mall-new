.dropdown-item-down {
  transition: all .2s;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100vw;
  height: 100vh;
  opacity: 0;
  visibility: hidden;
  z-index: 1;
}

.open.dropdown-item-down {
  opacity: 1;
  visibility: visible;
}

.mask {
  transition: all .2s;
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(51, 51, 51, .5);
}

.dropdown-item-down__content {
  padding: 32rpx;
  width: 100%;
  text-align: center;
  transition: all .2s;
  position: absolute;
  left: 0;
  top: 100%;
  background: #ffffff;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  overflow: hidden;

  /* height: 668rpx; */
  background: #FFFFFF;
  border-radius: 36rpx 36rpx 0rpx 0rpx;
}

.btn-close {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 24rpx;
  right: 24rpx;
}

