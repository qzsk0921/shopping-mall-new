.tabs-nav {
  display: flex;
  position: relative;
  background: #ffffff;
  white-space: nowrap;
}

.tabs-nav .tab {
  padding: 20rpx 0;
  flex: 1;
  text-align: center;
  position: relative;
  color: #999999;
  font-size: 26rpx;
  line-height: 30rpx;
}

.tabs-nav .tab.active {
  color: #DF4543;
}

.tabs-nav .tab>view {
  display: inline-block;
}

.tabs-nav .tabs-line {
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 1;
  transition-duration: .3s;
  width: 54rpx;
  height: 4rpx;
  border-radius: 10rpx;
  background: #DF4543;
}

.cont {
  overflow: auto;
  background: #FBFBFB;
}

.cont .no-data {
  text-align: center;
}

.cont .no-data image {
  margin-top: 82rpx;
  width: 483rpx;
  height: 400rpx;
}

.cont .no-data .text {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #949EA8;
}

.order-list {
}

.card {
  overflow: hidden;
  background: #ffffff;
  margin: 20rpx 24rpx 0;
  border-radius: 16rpx;
  background: #FFFFFF;
  border-radius: 16rpx 16rpx 16rpx 16rpx;
}

.content .order-list {}

.content .order-list .card {
  padding: 20rpx 32rpx;
}

.content .order-list .card .l1 {
  line-height: 80rpx;
  font-size: 26rpx;
  font-family: Source Han Sans CN-Regular, Source Han Sans CN;
  color: #999999;
  border-bottom: 2rpx solid #EEEEEE;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content .order-list .card .l1 .tip {
  font-size: 26rpx;
  color: #333333;
  line-height: 30rpx;
}

.content .order-list .card .l2 {
  height: 136rpx;
  display: flex;
  align-items: center;
}

.content .order-list .card .l2 .l2-left image {
  width: 88rpx;
  height: 88rpx;
}

.content .order-list .card .l2 .l2-right {
  padding-left: 20rpx;
  font-size: 24rpx;
  font-family: Source Han Sans CN-Regular, Source Han Sans CN;
  font-weight: 400;
  color: #999999;
  line-height: 28rpx;
}

.content .order-list .card .l2 .l2-right .tit {
