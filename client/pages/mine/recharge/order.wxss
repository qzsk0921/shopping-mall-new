}

.content .order-list .card .l4 .btn-pay {
  display: inline-block;
  text-align: center;
  width: 180rpx;
  line-height: 64rpx;
  background: #FD1B49;
  border-radius: 32rpx 32rpx 32rpx 32rpx;
  font-size: 28rpx;
  color: #FFFFFF;
}