}

.content .order-list .card .l3 .l3-1 {
  display: flex;
  align-items: center;
}

.content .order-list .card .l3 .l3-1 .btn-copy {
  width: 68rpx;
  height: 46rpx;
  background: #FFF0D0;
  border-radius: 4rpx 4rpx 4rpx 4rpx;
  font-size: 22rpx;
  color: #C67347;
  line-height: 46rpx;
  text-align: center;
  margin-left: 8rpx;
}

.content .order-list .card .l3 .l3-l {
  font-size: 24rpx;
  color: #666666;
  line-height: 28rpx;
  margin-top: 5rpx;
}

.content .order-list .card .l3-blod {
  position: absolute;
  bottom: 16rpx;
  right: 20rpx;
  display: flex;
  align-items: center;
