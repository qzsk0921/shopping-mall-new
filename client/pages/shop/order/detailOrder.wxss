.content {
  padding-bottom: 25rpx;
  overflow: auto;
}

.tobepaid {
  height: 64rpx;
  background: #FFF2F0;
  font-size: 24rpx;
  line-height: 64rpx;
  text-align: center;
  color: #FF6040;
}

.section1 {
  padding-bottom: 30rpx;
  background: #FFFFFF;
  display: flex;
  justify-content: space-between;
}

.section1 .left {
  padding-left: 30rpx;
}

.section1.status0 .left .row1 {
  color: #FF723A;
}

.section1.status2 .left .row1 {
