  justify-content: space-between;
}

.writeoff .r1 .btn-writeoff {
  width: 124rpx;
  height: 38rpx;
  background: rgba(239, 255, 246, 0.39);
  border: 2rpx solid #0DAA4F;
  border-radius: 19rpx;
  font-size: 22rpx;
  line-height: 32rpx;
  color: #0DAA4F;
  text-align: center;
}

