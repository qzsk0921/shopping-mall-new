  flex: 1;
}

.writeoff .r2 .r2-l2 .writeoff-txt {
  display: flex;
  align-items: center;
}

.writeoff .r2 .r2-l2 .writeoff-txt view {
  margin-right: 6rpx;
  width: 96rpx;
  height: 40rpx;
  background: rgba(13, 170, 79, 0.12);
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  line-height: 40rpx;
  color: #0DAA4F;
  text-align: center;
}

.writeoff .r2 .r2-l2 .writeoff-txt::after {
  content: '';
