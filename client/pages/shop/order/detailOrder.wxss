  align-items: center;
}

.section1 .right .btn {
  text-align: center;
  width: 152rpx;
  height: 56rpx;
  line-height: 50rpx;
  border: 2rpx solid #DDDDDD;
  border-radius: 28rpx;
  font-size: 26rpx;
  /* color: #333333; */
}

.section1.status0 .right .btn-pay {
  background: #FF723A;
  font-size: 26rpx;
  color: #FFFFFF;
}

.section1.status1 .right .btn-pay,
.section1.status2 .right .btn-pay {
