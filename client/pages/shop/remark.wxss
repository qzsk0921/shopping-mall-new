/* pages/shop/remark.wxss */
.container-remark {}

.textarea-box {
  margin: 20rpx 24rpx 0;
  position: relative;
  border-radius: 16rpx;
  width: 702rpx;
  height: 342rpx;
  padding: 30rpx 40rpx;
  background: #FFFFFF;
}

textarea {
  width: 100%;
  height: 100%;
}

.placeholder-style {
  font-size: 28rpx;
  color: #333333;
}

.textarea-box text {
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;
  font-size: 24rpx;
  color: #AAAAAA;
}

.reserves {
  display: flex;
  flex-wrap: wrap;
  padding-left: 24rpx;
}

.reserves .item {
  margin: 20rpx 20rpx 0 0;
  padding: 0 30rpx;
  height: 76rpx;
  background: #FFFFFF;
  border-radius: 16px;
  font-size: 28rpx;
  line-height: 76rpx;
  color: #888888;
}

.btn-submit {
  text-align: center;
  width: 702rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(90deg, var(--primary-linear-start) 0%, var(--primary-linear-end) 100%);
  border-radius: 40rpx;
  position: fixed;
  bottom: 48rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 32rpx;
  color: #FFFFFF;
}