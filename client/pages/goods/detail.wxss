  font-size: 20rpx;
  color: #999999;
}

.groupbargain .r2 .r2-r1 .r2-r1-r text:last-child::after {
  content: '';
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  border: 2rpx solid #999999;
  border-left-color: transparent;
  border-bottom-color: transparent;
  transform: rotate(45deg);
}

.groupbargain .r2 .r2-r2 {
  padding-left: 30rpx;
  font-size: 26rpx;
