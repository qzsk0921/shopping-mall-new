}

.groupbargain .r3 {
  padding: 30rpx 24rpx 40rpx;
  background: #FFFFFF;
  position: relative;
}

.groupbargain .r3 .arrow {
  position: absolute;
  /* top: 85rpx;
  right: 24rpx; */
  top: 60rpx;
  right: -1rpx;
  padding: 25rpx;
}

.groupbargain .r3 .arrow::before {
  display: block;
  content: '';
  width: 11rpx;
  height: 11rpx;
  border: 2rpx solid #888888;
  border-left-color: transparent;
  border-bottom-color: transparent;
  transition: transform .2s;
}

.groupbargain .r3 .r3-tit {
  font-size: 26rpx;
  color: #AAAAAA;
}

.groupbargain .r3 .r3-content {
  width: 664rpx;
  margin-top: 11rpx;
  font-size: 24rpx;
  line-height: 42rpx;
  color: #333333;
  display: block;
}

.groupbargain .r3 .arrow.collapse::before {
  transform: translateY(-7rpx) rotateZ(45deg);
}

.groupbargain .r3 .arrow.extend::before {
  transform: rotateZ(-45deg);
}

