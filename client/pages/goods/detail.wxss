/* pages/goods/detail.wxss */
.container-goods-detail {}

.content {
  overflow: auto;
}

.section1 {
  position: relative;
}

.section1 swiper {
  height: 750rpx;
}

.section1 .tip {
  text-align: center;
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  /* width: 84rpx; */
  padding: 0 19rpx;
  height: 38rpx;
  background: #333333;
  opacity: 0.5;
  border-radius: 19rpx;
  font-size: 24rpx;
  line-height: 38rpx;
  color: #FFFFFF;
}

.section1 .icon-banner {
  height: 100%;
}

.section2 {
  padding: 0 0 33rpx 24rpx;
  background: #FFFFFF;
}

.section2 .l1 {
  padding-top: 40rpx;
  display: flex;
  align-items: flex-end;
}

.section2 .l1>view {
  text-align: center;
  width: 96rpx;
  height: 34rpx;
  line-height: 34rpx;
  background: #22B862;
  border-radius: 8rpx;
  font-size: 20rpx;
  color: #FFFFFF;
  margin: 0 0 8rpx 12rpx;
}

.section2 .l1 text:nth-of-type(1) {
  font-size: 30rpx;
  font-weight: bold;
  color: #FC4953;
  margin-bottom: 8rpx;
}

.section2 .l1 text:nth-of-type(2) {
  font-size: 64rpx;
  font-weight: bold;
  color: #FE1D28;
}

.section2 .l1 text:nth-of-type(3) {
  margin: 0 0 11rpx 12rpx;
  font-size: 28rpx;
  color: #AAAAAA;
  text-decoration: line-through;
}


.section2 .l2 {
  margin-top: 9rpx;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 54rpx;
  color: #333333;
  padding-right: 24rpx;
}

.section2 .l3 {
  margin-top: 8rpx;
  font-size: 30rpx;
  line-height: 44rpx;
  color: #AAAAAA;
  padding-right: 24rpx;
}

.section3 {
  background: #FFFFFF;
  margin-top: 20rpx;
  padding: 0 24rpx;
  padding-bottom: 50rpx;
}

.section3 .l1 {
  height: 86rpx;
  line-height: 86rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
}

.section3 .l2,
.section3 .l3 {
  border-top: 2rpx solid #EEEEEE;
  line-height: 92rpx;
  height: 92rpx;
  display: flex;
}

.section3 .l2 .col,
.section3 .l3 .col {
  flex: 1;
}

.section3 .l2 .name,
.section3 .l3 .name {
  font-size: 28rpx;
  color: #888888;
  padding-right: 66rpx;
}

.section3 .l2 .col2 .name,
.section3 .l3 .col2 .name {
  padding-left: 20rpx;
  border-left: 2rpx solid #EEEEEE;
}

.section3 .l2 .val,
.section3 .l3 .val {
  font-size: 28rpx;
  color: #333333;
}

.section3 .l4 .icon-goods {
  margin-top: 40rpx;
  width: 702rpx;
  height: 702rpx;
  background: rgba(0, 0, 0, 0);
}

.section3 .l4 .icon-goods:not(:first-child) {
  margin-top: 20rpx;
}

.footer {
  width: 100%;
  /* height: 108rpx; */
  background: #FFFFFF;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  padding-bottom: env(safe-area-inset-bottom);
}

.footer .col1 {
  margin-left: 52rpx;
}

.footer .col2 {
  margin-left: 77rpx;
}

.footer .col1,
.footer .col2 {
  text-align: center;
  margin-top: 8rpx;
  font-size: 20rpx;
  color: #666666;
}

.footer .col1 .shopcart-box {
  position: relative;
  /* width: 40rpx;
  height: 40rpx; */
}

.shopcart-info {
  position: absolute;
  text-align: center;
  background: #FC4953;
  position: absolute;
  top: -6rpx;
  right: -11rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  line-height: 24rpx;
  color: #FFFFFF;
  min-height: 24rpx;
  padding: 0 8rpx;
}

.footer image {
  width: 40rpx;
  height: 40rpx;
}

.footer .btn-car {
  margin: 14rpx 0 14rpx 65rpx;
  width: 432rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(90deg, var(--primary-linear-start) 0%, var(--primary-linear-end) 100%);
  box-shadow: 0px 4px 6px rgba(242, 70, 15, 0.34);
  border-radius: 40rpx;
  font-size: 32rpx;
  color: #FFFFFF;
}