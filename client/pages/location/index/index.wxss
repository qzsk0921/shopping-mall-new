.addr-active {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--primary-color) !important;
}

.section3 .deliveryAddress-box .l2:nth-of-type(n+3) {
  border-top: 2rpx solid #F3F3F3;
}

.list {
  padding-top: 10rpx;
  position: absolute;
  width: 100vw;
  overflow: auto;
  background: #FFFFFF;
}

.list .btn-item {
  /* height: 138rpx; */
  margin: 0 24rpx;
  border-bottom: 2rpx solid #F3F3F3;
  display: flex;
  justify-content: space-between;
}

.list .btn-item .btn-item-l,
.list .btn-item .btn-item-r {}

.list .btn-item .btn-item-l {
  flex: 4;
}

.list .btn-item .btn-item-r {
  flex: 1;
  /* line-height: 138rpx; */
  font-size: 26rpx;
  color: #777777;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.list .btn-item .title {
  margin-top: 19rpx;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 54rpx;
  color: #333333;
}

.list .btn-item .address {
  /* margin-top: 9rpx; */
  font-size: 26rpx;
  line-height: 44rpx;
  color: #777777;
  margin-bottom: 21rpx;
}

.list .btn-poi.btn-active {
  color: red;
}

.footer {
  text-align: center;
  width: 616rpx;
  height: 80rpx;
  background: linear-gradient(90deg, var(--primary-linear-start) 0%, var(--primary-linear-end) 100%);
  border-radius: 40rpx;
  font-size: 32rpx;
  line-height: 80rpx;
  position: fixed;
  bottom: 48rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #FFFFFF;
}