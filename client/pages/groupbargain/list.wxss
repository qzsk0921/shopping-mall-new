/* pages/groupbargain/list.wxss */

.content {
  position: relative;
}

.content .no-data {
  text-align: center;
}

.content .no-data image {
  margin-top: 82rpx;
  width: 483rpx;
  height: 400rpx;
}

.content .no-data .text {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #949EA8;
}

.block {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 284rpx;
  background: linear-gradient(180deg, #FF503F 0%, #F6F6F6 100%);
}

.scroll-box {
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
}

.cont {}

.item {
  width: 702rpx;
  margin: 20rpx auto 0;
  padding: 0 24rpx 24rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
}

.item-box {
  display: inline-block;
  width: 100%;
}

.item .r1 {
  display: flex;
  align-items: center;
  height: 78rpx;
  border-bottom: 2rpx solid #EEEEEE;
}

.item .r1 view {
  width: 53rpx;
  height: 31rpx;
  background: linear-gradient(90deg, #FF7C33 0%, #FA333A 100%);
  border-radius: 4rpx;
  line-height: 31rpx;
  font-size: 20rpx;
  color: #FFFFFF;
  text-align: center;
  margin-right: 12rpx;
}

.item .r1 image {
  width: 38rpx;
  height: 38rpx;
  background: rgba(0, 0, 0, 0);
  border: 1rpx solid #FFFFFF;
  border-radius: 50%;
  opacity: 1;
  margin-right: 10rpx;
}

.item .r1 text {
  font-size: 26rpx;
  color: #333333;
}

.item .r2 {
  padding-top: 24rpx;
  display: flex;
}

.item .r2-l1 {}

.item .r2-l1 image {
  width: 220rpx;
  height: 220rpx;
  background: rgba(0, 0, 0, 0);
  opacity: 1;
  border-radius: 16rpx;
  margin-right: 24rpx;
}

.item .r2-l2 {
  flex: 1;
}

.item .r2-l2-r1 {
  margin-top: -5rpx;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 38rpx;
  color: #333333;
  height: 80rpx;
}

.item .r2-l2-r2 {
  margin-top: 5rpx;
}

.item .r2-l2-r2 text:nth-of-type(1) {
  font-size: 22rpx;
  line-height: 37rpx;
  color: #FC4953;
}

.item .r2-l2-r2 text:nth-of-type(2) {
  font-size: 24rpx;
  font-weight: bold;
  line-height: 41rpx;
  color: #FC4953;
  margin: 0 4rpx 0 2rpx;
}

.item .r2-l2-r2 text:nth-of-type(3) {
  font-size: 34rpx;
  font-weight: bold;
  line-height: 58rpx;
  color: #FC4953
}

.item .r2-l2-r2 text:nth-of-type(4) {
  font-size: 22rpx;
  line-height: 37rpx;
  color: #999999;
}

.item .r2-l2-r3 {
  margin-top: 23rpx;
  display: flex;
  justify-content: space-between;
}

.item .r2-l2-r3-l2 {
  width: 135rpx;
  height: 60rpx;
  background: rgba(255, 114, 58);
  border-radius: 12rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  color: #FFFFFF;
  text-align: center;
}

.item .r2-l2-r3-l1-r1 {
  width: 159rpx;
  height: 32rpx;
  background: #FFEEEF;
  opacity: 1;
  border-radius: 4rpx;
  font-size: 22rpx;
  font-weight: 500;
  line-height: 32rpx;
  color: #FC4953;
  text-align: center;
}

.item .r2-l2-r3-l1-r2 {
  margin-top: 14rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.item .r2-l2-r3-l1-r2 image {
  width: 24rpx;
  height: 30rpx;
  margin-top: -10rpx;
  position: absolute;
  left: 0;
  z-index: 1;
}

.item .r2-l2-r3-l1-r2>view {
  width: 190rpx;
  height: 20rpx;
  background: rgba(255, 50, 6, 0.15);
  /* border: 1rpx solid #FC4953; */
  /* opacity: 0.15; */
  border-radius: 11rpx;
  margin: 0 10rpx 0 11rpx;
  position: relative;
}

.item .r2-l2-r3-l1-r2>view .percentage {
  height: 20rpx;
  background: #FF723A;
  opacity: 1;
  border-radius: 11rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.r2-l2-r3-l1-r2 text {
  font-size: 20rpx;
  color: #888888;
}