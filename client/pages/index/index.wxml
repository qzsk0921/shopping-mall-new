        <view class="b hide-scrollbar">
          <view wx:for="{{shopData.bargaining_list}}" wx:key="unique" class="item" bindtap="toBargainGoodsDetail" data-item="{{item}}">
            <image class="icon-collage" src="{{item.goods_info.thumb}}" mode="aspectFill"></image>
