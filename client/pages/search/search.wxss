  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  content: '';
  background-size: 100% 100%;
}

.search::before {
  left: 30rpx;
  width: 32rpx;
  height: 30rpx;
  background-image: url("data:image/png;base64,");
}

