.search-history {
  margin-top: 61rpx;
  padding: 0 32rpx;
}

.search-history .tit {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.search-history .tit .icon-del {
  width: 38rpx;
  height: 40rpx;
}

.item-box {
  margin-top: 35rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.btn-search-item {
  margin-top: 16rpx;
  padding: 19rpx 24rpx;
  background: #F7F8FC;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #333333;
}

.btn-search-item:not(:last-child) {
  margin-right: 20rpx;
}

.list {
  padding-top: 10rpx;
  position: absolute;
  width: 100vw;
  overflow: auto;
  background: #FFFFFF;
}

.list .btn-item {
  margin: 0 32rpx;
  border-bottom: 2rpx solid #F3F3F3;
  display: flex;
  justify-content: space-between;
  height: 88rpx;
}

.list .btn-item .btn-item-l {
  flex: 4;
}

.list .btn-item .title {
  font-size: 28rpx;
  line-height: 88rpx;
  color: #383D46;
}