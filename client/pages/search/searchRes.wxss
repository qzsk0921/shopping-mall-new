/* pages/search/searchRes.wxss */
.container-searchRes {}

.section1 {
  background: #FFFFFF;
  display: flex;
  padding: 0 24rpx;
  justify-content: space-between;
  align-items: center;
}

.section1 .input-box {
  position: relative;
  width: 634rpx;
  height: 68rpx;
  padding-left: 70rpx;
  border-radius: 36rpx;
  background: #F6F6F6;
}

.section1 .input-box .search {
  height: 100%;
  width: calc(100% - 70rpx);
  font-size: 30rpx;
  color: #333333;
}

.section1 .input-box .search-placeholder {
  font-size: 30rpx;
  color: #999999
}

.section1 .input-box .icon-search {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 24rpx;
  width: 30rpx;
  height: 30rpx;
}

.section1 .input-box .icon-close {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  right: 14rpx;
  top: 50%;
  transform: translateY(-50%);
}

/* .section1 .icon-cart {
  width: 41rpx;
  height: 39rpx;
} */

.section1 .shopcart-box {
  /* position: absolute;
  right: 20rpx;
  bottom: 20rpx; */
  position: relative;
  width: 41rpx;
  height: 39rpx;
  margin-right: 5rpx;
}

.section1 .shopcart-box .shopcart-info {
  text-align: center;
  background: #FC4953;
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  line-height: 24rpx;
  color: #FFFFFF;
  min-height: 24rpx;
  padding: 0 8rpx;
}

.section2 {}

.section2 .l1 {
  display: flex;
  height: 72rpx;
}

.section2 .tabs-nav>view {
  flex: 1;
  text-align: center;
  line-height: 72rpx;
  background: #FFFFFF;
  font-size: 28rpx;
  /* color: #333333; */
  color: #bbbbbb;
}

.section2 .tab.active {
  color: #333333;
}

.section2 .l1 .price {
  display: flex;
  justify-content: center;
}

.section2 .l1 .price text {
  /* display: inline-block; */
}


.section2 .triangle-box {
  /* display: inline-block; */
  /* width: 40rpx; */
  height: 100%;
  margin-left: 12rpx;
}

.section2 .triangle-box .triangle {
  /* display: inline-block; */
  width: 0;
  height: 0;
}

.section2 .triangle-box .triangle-active {}

.section2 .triangle-t {
  border-top: 10rpx solid transparent;
  border-bottom: 10rpx solid #BBBBBB;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  margin: 15rpx 0 9rpx;
}

.section2 .triangle-b {
  border-top: 10rpx solid #BBBBBB;
  border-bottom: 10rpx solid transparent;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
}

.section2 .triangle-t.triangle-active {
  border-bottom-color: var(--primary-color);
}

.section2 .triangle-b.triangle-active {
  border-top-color: var(--primary-color);
}

.section2 .scroll-box .list {
  padding: 0 24rpx 40rpx;
  display: flex;
  flex-wrap: wrap;
}

.section2 .scroll-box .list .item {
  margin-top: 20rpx;
  width: 336rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  position: relative;
}

.section2 .scroll-box .list .item:nth-of-type(2n) {
  margin-left: 20rpx;
}

.section2 .scroll-box .list .item .item-image {
  width: 336rpx;
  height: 336rpx;
  background: rgba(0, 0, 0, 0);
  border-radius: 16rpx 16rpx 0rpx 0rpx;
}


.section2 .scroll-box .list .item .item-content {
  padding: 0 20rpx 20rpx;
}

.section2 .scroll-box .list .item .item-content {
  padding-top: 15rpx;
}

.section2 .scroll-box .list .item .item-content .l1 {
  font-size: 26rpx;
  line-height: 40rpx;
  font-weight: bold;
  color: #333333;
}

.section2 .scroll-box .list .item .item-content .l1 .tag {
  float: left;
  margin: 8rpx 6rpx 0 0;
  text-align: center;
  width: 96rpx;
  height: 28rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  line-height: 28rpx;
  color: #FFFFFF;
}

.section2 .scroll-box .list .item .item-content .l1 .tag.new_activity {
  background: #FF7753;
}

.section2 .scroll-box .list .item .item-content .l1 .tag.pre_sale {
  background: #22B862;
}

.section2 .scroll-box .list .item .item-content .l2 {
  display: flex;
  justify-content: space-between;
}

.section2 .scroll-box .list .item .item-content .l2 .price-box {
  display: flex;
  align-items: flex-end;
}

.section2 .scroll-box .list .item .item-content .l2 .no-sign {
  font-size: 24rpx;
  color: #888888;
  margin-bottom: 8rpx;
}

.section2 .scroll-box .list .item .item-content .shopcart-box {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 56rpx;
  height: 56rpx;
}

.section2 .scroll-box .list .item .item-content .shopcart-box .icon-shopcart {
  width: 56rpx;
  height: 56rpx;
  background: #FFFFFF;
  border-radius: 50%;
}

.section2 .scroll-box .list .item .item-content .shopcart-box .shopcart-info {
  text-align: center;
  background: #FC4953;
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  line-height: 24rpx;
  color: #FFFFFF;
  min-height: 24rpx;
  padding: 0 8rpx;
}


.section2 .scroll-box .list .item .item-content .l2 {
  margin-top: 40rpx;
  justify-content: flex-start;
  align-items: center;
}

.section2 .scroll-box .list .item .item-content .l2.no-sign {
  font-size: 24rpx;
  color: #888888;
  margin-bottom: 8rpx;
}

.section2 .scroll-box .list .item .item-content .l2 .price {
  font-size: 34rpx;
  font-weight: bold;
  color: #FC4953;
}

.section2 .scroll-box .list .item .item-content .l2 .price text {
  font-size: 24rpx;
  font-weight: bold;
  color: #FC4953;
}

.section2 .scroll-box .list .item .item-content .l2 .origin-price {
  margin-left: 2rpx;
  font-size: 22rpx;
  color: #888888;
  text-decoration: line-through;
}



.section2 .no-data {
  text-align: center;
}

.section2 .no-data image {
  margin-top: 82rpx;
  width: 483rpx;
  height: 400rpx;
}

.section2 .no-data .text {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #949EA8;
}

.search-list {
  padding-top: 10rpx;
  position: absolute;
  width: 100vw;
  overflow: auto;
  background: #FFFFFF;
  z-index: 1;
}

.search-list .btn-item {
  margin: 0 32rpx;
  border-bottom: 2rpx solid #F3F3F3;
  display: flex;
  justify-content: space-between;
  height: 88rpx;
}

.search-list .btn-item .btn-item-l {
  flex: 4;
}

.search-list .btn-item .title {
  font-size: 28rpx;
  line-height: 88rpx;
  color: #383D46;
}