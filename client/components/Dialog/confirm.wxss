/* components/Dialog/comfirm.js.wxss */

.dialog-wrap {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100vw;
  height: 100%;
  z-index: 10000;
  text-align: center;
  transition: all .4s;
  display: flex;
  justify-content: center;
  align-items: center;
}

.fadeout {
  opacity: 0;
  visibility: hidden;
}

.mask {
  /* transition: all .4s; */
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(51, 51, 51, .5);
}

.dialog {
  position: relative;
  width: 610rpx;
  /* height: 300rpx; */
  background: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
}

.dialog .tit {
  margin-top: 48rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
}

.dialog .content {
  width: 390rpx;
  line-height: 42rpx;
  font-size: 30rpx;
  color: #333333;
  margin: 34rpx auto 54rpx;
}

.dialog .footer {
  display: flex;
}

.dialog .footer .btn-confirm {
  color: #FFFFFF;
  /* background: #F23D32; */
}

.dialog .footer .btn-cancel {
  color: #333333;
  /* background: #FFFFFF; */
  border-top: 2rpx solid #EEEEEE;
}

.dialog .footer .btn {
  width: 50%;
  height: 88rpx;
  line-height: 88rpx;
}