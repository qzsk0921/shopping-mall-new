.row1 {
  padding: 310rpx 0 80rpx;
  position: relative;
  width: 540rpx;
  /* height: 568rpx; */
  background: #FFF9ED;
  border-radius: 30rpx;
}

.row11 {
  margin: -58rpx auto 0;
  width: 454rpx;
  height: 116rpx;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  z-index: 1;
}

.row11 .icon-popup {
  width: 100%;
  height: 100%;
}

.row11 text {
  width: 100%;
  position: absolute;
  top: 24rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 34rpx;
  font-weight: 500;
  color: #EC2300;
  letter-spacing: 2rpx;
}

.row12 {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 310rpx;
}

.row12 .icon-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.row12 .icon-good-box {
  width: 180rpx;
  height: 180rpx;
  position: absolute;
  top: 78rpx;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 30rpx;
  background: #ffffff;
  overflow: hidden;
}

.row12 .icon-good {
  width: 100%;
  height: 100%;
}

.row13 {
  margin-top: 50rpx;
}

.row14 {
  margin-top: 18rpx;
}

.row13,
.row14 {
