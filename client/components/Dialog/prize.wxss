/* components/Dialog/prize.js.wxss */
.dialog-wrap {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100vw;
  height: 100%;
  z-index: 10000;
  text-align: center;
  transition: all .4s;
  display: flex;
  justify-content: center;
  align-items: center;
}

.fadeout {
  opacity: 0;
  visibility: hidden;
}

.mask {
  /* transition: all .4s; */
  position: absolute;
  width: 100%;
  height: 100%;
  /* background: rgba(51, 51, 51, .5); */
  background: rgba(51, 51, 51, .8);
  z-index: -1;
}

.dialog {
  /* padding: 100rpx 115rpx 96rpx;
