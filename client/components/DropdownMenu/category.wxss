/* components/DropdownMenu/category.wxss */

.dropdown-item-down {
  z-index: 1;
  transition: all .2s;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  width: 100vw;
  height: 100vh;
  opacity: 0;
  visibility: hidden;
}

.opened.dropdown-item-down {
  opacity: 1;
  visibility: visible;
}

.mask {
  transition: all .2s;
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(51, 51, 51, .5);
}

.dropdown-item-down__content {
  position: absolute;
  width: 100%;
  bottom: 100%;
  left: 0;
  padding-bottom: 6rpx;
  background: #FFFFFF;
  border-radius: 0rpx 0rpx 26rpx 26rpx;
  overflow: hidden;
  /* transition: all .2s; */
}

.dropdown-item-down__content .l1 {
  padding: 0 24rpx;
  height: 118rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dropdown-item-down__content .l1 .tit {
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
}

.dropdown-item-down__content .l1 .collapse {
  width: 84rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #333333;
  position: relative;
}

.dropdown-item-down__content .l1 .collapse::after {
  position: absolute;
  content: '';
  top: -6rpx;
  right: 0;
  width: 0;
  height: 0;
  border-top: 12rpx solid transparent;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-bottom: 12rpx solid #E1E2E2;
}

.dropdown-item-down__content .l2 {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  text-align: left;
  background: #FFFFFF;

  font-size: 24rpx;
  color: #333333;
}

.opened .dropdown-item-down__content {
  /* transform: translateY(660rpx); */
}

.dropdown-item-down__item {
  /* padding: 0 15rpx; */
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 38rpx;
}

.dropdown-item-down__item.category-active .text-category {
  background: #27C068;
  color: #FFFFFF;
}

