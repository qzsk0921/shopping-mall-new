/* components/DropdownMenu/groupprivilege.wxss */
.dropdown-item-down {
  transition: all .2s;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100vw;
  height: 100vh;
  opacity: 0;
  visibility: hidden;
  z-index: 99999;
}

.opened.dropdown-item-down {
  opacity: 1;
  visibility: visible;
}

.mask {
  transition: all .2s;
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(51, 51, 51, .5);
}

.dropdown-item-down__content {
  padding: 40rpx 24rpx 30rpx;
  width: 100%;
  transition: all .2s;
  position: absolute;
  left: 0;
  top: 100%;
  background: #F2F3F6;
  border-radius: 24rpx 24rpx 0rpx 0rpx;
  overflow: hidden;
  padding-bottom: env(safe-area-inset-bottom);
}

